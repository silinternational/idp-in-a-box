[
  {
    "volumesFrom": [],
    "memory": ${memory},
    "extraHosts": null,
    "dnsServers": null,
    "disableNetworking": null,
    "dnsSearchDomains": null,
    "portMappings": [],
    "hostname": null,
    "essential": true,
    "entryPoint": null,
    "mountPoints": [],
    "name": "cron",
    "ulimits": null,
    "dockerSecurityOptions": null,
    "environment": [
      {
        "name": "APP_ENV",
        "value": "${app_env}"
